template#vainilla-tour
  style
    :host {
      -webkit-transition: all ease 0.5s; /* Safari */
      transition: all ease 0.5s;
      width: 250px;
      height: auto;
      min-height: 90px;
      position: absolute;
      top: 0;
      display: inline-block;
      z-index: 10000000;
      box-sizing: border-box;
      background-color: #ffffff;
      border-radius: 2px;
      font-family: 'Roboto', 'Noto', sans-serif;
      -webkit-font-smoothing: antialiased;
      padding-top: 10px;
      box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
    }
    :host:before {
      z-index: 4;
      content: " ";
      height: 10px;
      border-top: solid transparent 10px;
      border-bottom: 10px solid black;
      border-bottom-color: inherit;
      border-left: solid transparent 10px;
      width: 10px;
      top: -20px;
      position: absolute;
      pointer-events: none;
      border-right: solid transparent 10px;
    }
    :host ::content{
      color: cyan;
      text-align: center;
      min-height: 150px;
    }
    :host ::content .buttons {
      border-top: 1px solid #e8e8e8;
      width: 250px;
      position: absolute;
      bottom: 0px;
      text-align: center;
      padding-top: 10px;
      padding-bottom: 10px;
    }
  content
template#step-tour
  style
    :host {
      display: table;
    }
    :host ::content div{
      color: black;
      opacity: 0;
      display: none;
      padding: 5px;
      display: table-cell;
      vertical-align: middle;
      text-align: center;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }
  content
