link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
//Font Awesome
template#ikenga-container
  style
    :host {
      position: absolute;
      height: calc(100% - 20px);
      width: 100%;
    }
  content
template#ikenga-nav
  style
    :host {
      height: 60px;
      font-size: 16px;
      line-height: 60px;
      color: white;
      transition: height 0.2s;
      
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      overflow: hidden;
    }
  content
template#ikenga-menu
  style
    :host {
      background: #ffffff;
      display: none !important;
      color: #212121;
      display: block;
      padding: 8px 0;
      position: fixed;
      top: 62px;
      box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
      z-index: 10;
    }
    :host(.view) {
      display: inline !important;
    }
    
  content
template#ikenga-item-menu
  style
    :host{
      min-height: 48px;
      display: -webkit-flex;
      display: flex;
      -ms-flex-direction: row;
      -webkit-flex-direction: row;
      flex-direction: row;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
      font-family: 'Roboto', 'Noto', sans-serif;
      -webkit-font-smoothing: antialiased;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      position: relative;
      padding: 0px 16px;
    }
    :host(:hover) {
      background: #CCCCCC;
      cursor: pointer;
    }
  content
template#ikenga-icon-nav
  style
    :host{
      float: right;
    }
    :host ::content div {
      position: absolute;
      cursor: pointer;
      top: 0;
      bottom: 0;
      width: 60px;
      border-radius: 50%;
    }
  content
template#ikenga-content
  style
    :host{
      margin-top: 60px;
      position: absolute;
      width: 100%;
      height: calc(100% - 60px);
    }
  content
template#ikenga-menu-actions
  style
    :host {
      display: table;
      width: calc(100% - 80px);
      height: 66px;
      padding-left: 20px;
    }
    :host ::content .title {
      position: absolute;
      font-size: 15pt;
      font-family: 'Roboto';
    }
    :host ::content #container-menu-actions {
      width: 20px;
      display: table;
      height: 60px;
    }
    :host ::content .actions {
      padding-top: 0px !important;
    }
    :host ::content #container-menu-actions > div{
      display: table-cell;
      padding-right: 10px;
      padding-left: 10px;
      vertical-align: middle;
    }
  content
script(src='ikenga-container.browserify.js')
